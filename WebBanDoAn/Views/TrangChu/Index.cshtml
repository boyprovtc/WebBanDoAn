@model IEnumerable<WebBanDoAn.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row">
    @foreach (var mon in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Details", "TrangChu", new { id = mon.IDSanPham})">
                    <img alt="@mon.TenSanPham" src="~/Hinhsanpham/@mon.HinhAnh" width="200" />

                    <div>
                        <br />
                        <h4 style="text-align:center">
                            @mon.TenSanPham
                        </h4>
                        <p></p>     
                    </div>
                    <div class="ratings">
                        <p class="pull-right">15 reviews</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                    </div>
                </a>
            </div>
        </div>
    }
</div>

