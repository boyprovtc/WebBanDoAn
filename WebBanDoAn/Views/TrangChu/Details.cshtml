<style type="text/css">
    #Datmua a {
        clear: both;
        background-color: red;
        color: white;
        width: 120px;
        height: 35px;
        display: block;
        float: right;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
    }

        #Datmua a:hover {
            background-color: gray;
            color: red;
        }
</style>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Thông tin chi tiết sản phẩm</h2>
<div>
    <div style="width:40%; float:left; border-left: dotted 1px; border-color:azure">
        <img src="~/Hinhsanpham/@Model.HinhAnh" width="100%" />
    </div>
    <div style="width:60%; float:left; padding:10px">
        <h4 style="font-weight:bold; color:red">Tên sách: @Model.TenSanPham </h4>
        <p style="text-align:justify"><Span style="font-weight:bold"> Chú Thích: </Span>@Model.ChuThich </p>
        <p style="font-weight:bold"> Giá: <span style="color:red; font-size:16pt "> @Model.DonGia VNĐ </span></p>
    </div>
    <div>
        <div id="Datmua">
            <a href="@Url.Action("ThemGioHang", "GioHang", new { @idSP = @Model.IDSanPham, @strURL = Request.Url.ToString() })">
                Đặt Mua
            </a>
        </div>
    </div>
</div>